{
  "name": "portfolio",
  "author": "mryhryki",
  "private": true,
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "build": "run-s 'blog:build' 'slide:build' 'sitemap:build'",
    "preview": "http-server site/ --port 58125 -o",
    "update": "aws s3 sync site/ s3://mryhryki-cdn/contents/ --exclude='.DS_Store' --size-only",
    "article:add": "zenn new:article --slug \"$(date +%Y-%m-%d)-$(openssl rand -hex 3)\"",
    "article:preview": "open http://localhost:58125/ && zenn preview --port 58125",
    "blog:build": "rm -rf ./site/blog/ && (esbuild --platform=node --external:node:* --bundle script/blog/build.ts | node)",
    "generate:holidays": "esbuild --platform=node --external:node:* --bundle ./script/data/generate_holidays.ts | node",
    "lint": "mryhryki-lint",
    "lint:fix": "mryhryki-lint-fix",
    "slide:build": "rm -rf ./site/slide/ && (esbuild --platform=node --external:node:* --bundle ./script/slide/build.ts | node)",
    "sitemap:build": "rm -f ./site/sitemap.txt && (esbuild --platform=node --external:node:* --bundle ./script/sitemap/build.ts | node)",
    "textlint": "textlint ./**/*.md",
    "textlint:fix": "textlint --fix ./**/*.md"
  },
  "dependencies": {
    "@mryhryki/datetime": "^0.0.4",
    "@mryhryki/lint": "^0.0.6",
    "@mryhryki/markdown": "^0.3.0",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "@types/rss": "^0.0.29",
    "esbuild": "^0.14.25",
    "http-server": "^14.1.0",
    "iconv-lite": "^0.6.3",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rss": "^1.2.2",
    "textlint": "^12.1.1",
    "textlint-rule-no-todo": "^2.0.1",
    "textlint-rule-preset-ja-technical-writing": "^7.0.0",
    "zenn-cli": "^0.1.107"
  }
}
