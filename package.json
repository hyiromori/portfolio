{
  "name": "portfolio",
  "author": "mryhryki",
  "private": true,
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "dev": "run-p 'build:watch' 'preview'",
    "zenn": "open http://localhost:58125/ && zenn preview --port 58125",
    "build": "esbuild --platform=node --external:node:* --bundle script/site/build.ts | node",
    "build:watch": "nodemon --watch posts/ --watch script/ --ext md,ts,tsx --exec 'npm run build'",
    "generate:holidays": "esbuild --platform=node --external:node:* --bundle ./script/data/generate_holidays.ts | node",
    "lint": "mryhryki-lint",
    "lint:fix": "mryhryki-lint-fix",
    "preview": "http-server site/ --port 58125 -o",
    "update": "aws s3 sync site/ s3://mryhryki-cdn/contents/ --exclude='.DS_Store' --size-only"
  },
  "dependencies": {
    "@mryhryki/datetime": "^0.0.6",
    "@mryhryki/lint": "^0.0.8",
    "@mryhryki/markdown": "^0.3.1",
    "@types/node": "^17.0.40",
    "@types/react": "^18.0.11",
    "@types/react-dom": "^18.0.5",
    "@types/rss": "^0.0.29",
    "esbuild": "^0.14.42",
    "http-server": "^14.1.1",
    "iconv-lite": "^0.6.3",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "rss": "^1.2.2",
    "zenn-cli": "^0.1.110"
  }
}
