{
  "name": "portfolio",
  "author": "mryhryki",
  "private": true,
  "scripts": {
    "article:add": "zenn new:article --slug \"$(date +%Y-%m-%d)-$(openssl rand -hex 3)\"",
    "article:preview": "open http://localhost:58125/ && zenn preview --port 58125",
    "site:build": "node ./script/site/build.js",
    "site:preview": "http-server site/ --port 58125 -o",
    "site:update": "aws s3 sync site/ s3://mryhryki-cdn/contents/ --exclude='.DS_Store' --size-only"
  },
  "dependencies": {
    "@mryhryki/markdown": "^0.1.2",
    "ejs": "^3.1.6",
    "http-server": "^14.0.0",
    "js-yaml": "^4.1.0",
    "rss": "^1.2.2",
    "yaml": "^1.10.2",
    "zenn-cli": "^0.1.98"
  }
}
