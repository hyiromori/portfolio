{
  "name": "portfolio",
  "author": "mryhryki",
  "private": true,
  "scripts": {
    "_clean": "rm -rf ./site/blog/ ./site/sitemap.txt",
    "_script:site:build": "esbuild --platform=node --external:node:* --bundle --outfile=.temp.js ./script/site/build.ts && node .temp.js",
    "article:add": "zenn new:article --slug \"$(date +%Y-%m-%d)-$(openssl rand -hex 3)\"",
    "article:preview": "open http://localhost:58125/ && zenn preview --port 58125",
    "lint": "mryhryki-lint",
    "lint:fix": "mryhryki-lint-fix",
    "textlint": "textlint ./**/*.md",
    "textlint:fix": "textlint --fix ./**/*.md",
    "site:build": "run-s '_clean' '_script:site:build'",
    "site:preview": "npm run site:build && http-server site/ --port 58125 -o",
    "site:update": "aws s3 sync site/ s3://mryhryki-cdn/contents/ --exclude='.DS_Store' --size-only --dryrun"
  },
  "dependencies": {
    "@mryhryki/datetime": "^0.0.4",
    "@mryhryki/lint": "^0.0.6",
    "@mryhryki/markdown": "^0.2.3",
    "@types/ejs": "^3.1.0",
    "@types/node": "^17.0.18",
    "@types/rss": "^0.0.29",
    "ejs": "^3.1.6",
    "esbuild": "^0.14.21",
    "http-server": "^14.1.0",
    "npm-run-all": "^4.1.5",
    "rss": "^1.2.2",
    "textlint": "^12.1.0",
    "textlint-rule-no-todo": "^2.0.1",
    "textlint-rule-preset-ja-technical-writing": "^7.0.0",
    "zenn-cli": "^0.1.106"
  }
}
