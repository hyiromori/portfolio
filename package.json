{
  "name": "portfolio",
  "author": "mryhryki",
  "private": true,
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "writing": "run-p 'build:watch' 'preview'",
    "article:add": "zenn new:article --slug \"$(date +%Y-%m-%d)-$(openssl rand -hex 3)\"",
    "article:preview": "open http://localhost:58125/ && zenn preview --port 58125",
    "build": "esbuild --platform=node --external:node:* --bundle script/site/build.ts | node",
    "build:watch": "nodemon --watch posts/ --watch script/ --ext md,ts,tsx --exec 'npm run build'",
    "generate:holidays": "esbuild --platform=node --external:node:* --bundle ./script/data/generate_holidays.ts | node",
    "lint": "mryhryki-lint",
    "lint:fix": "mryhryki-lint-fix",
    "preview": "http-server site/ --port 58125 -o",
    "textlint": "textlint ./**/*.md",
    "textlint:fix": "textlint --fix ./**/*.md",
    "update": "aws s3 sync site/ s3://mryhryki-cdn/contents/ --exclude='.DS_Store' --size-only"
  },
  "dependencies": {
    "@mryhryki/datetime": "^0.0.4",
    "@mryhryki/lint": "^0.0.6",
    "@mryhryki/markdown": "^0.3.0",
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@types/rss": "^0.0.29",
    "esbuild": "^0.14.28",
    "http-server": "^14.1.0",
    "iconv-lite": "^0.6.3",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rss": "^1.2.2",
    "textlint": "^12.1.1",
    "textlint-rule-no-todo": "^2.0.1",
    "textlint-rule-preset-ja-technical-writing": "^7.0.0",
    "zenn-cli": "^0.1.108"
  }
}
