{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["esnext", "DOM.Iterable", "dom"],
    "moduleResolution": "Node16",
    "noEmit": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2015"
  },
  "include": [
    "script/**/*.ts",
    "script/**/*.tsx"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/*.test.ts"
  ]
}
